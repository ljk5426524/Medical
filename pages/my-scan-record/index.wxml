<view class="page">
  <view class="user-item" wx:for="{{doctorList}}" wx:key="id" bindtap="toDoctorDetail" data-id="{{item.id}}">
    <image class="avator" src="/res/images/home-doctor.png" />
    <view class="info">
      <view class="name">
        {{item.name}}
        <text class="position">{{item.position}}</text>
      </view>
      <view class="hospital">
        {{item.hospital}}
        <text class="department">{{item.department}}</text>
      </view>
    </view>
    <view wx:if="{{item.state === 1}}" class="btn-chat" bindtap="toChat">申请加入</view>
    <view wx:else class="btn-chat saved">已加入</view>
  </view>
  <view wx:if="{{!doctorList.length}}">暂无扫码记录</view>
</view>