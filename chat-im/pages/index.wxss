.page {
  height: 100vh;
  background-color: #fbfcfdFF;
  box-sizing: border-box
}

.page .tabs {
  padding: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  gap: 40rpx
}

.page .tabs .tab-item {
  position: relative;
  font-size: 32rpx;
  color: #9FA8B9;
  padding: 20rpx 0
}

.page .tabs .tab-item.active {
  color: #2E3C67
}

.page .tabs .tab-item.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 11rpx;
  background-color: #6D91FF;
  border-radius: 6rpx
}